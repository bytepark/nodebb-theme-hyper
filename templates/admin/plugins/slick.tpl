<div class="row">
	<div class="col-sm-2 col--12 settings-header">Slick Theme Settings</div>
	<div class="col-sm-10 col--12">
		<form role="form" class="slick-settings">
		    <div class="form-check">
                <input class="mdl-switch__input form-check-input" type="checkbox" id="hideSubCategories" name="hideSubCategories">
                <label class="form-check-label form-label mdl-switch mdl-js-switch mdl-js-ripple-effect">
					<span class="mdl-switch__label"><strong>Hide subcategories on categories page</strong></span>
				</label>
			</div>

			<div class="form-group">
				<label for="skinOption">Select a skin</label>
				<select id="skinOption" name="skinOption" class="form-control">
					<option value="default">Default</option>
					<option value="red">Red</option>
					<option value="dark">Dark</option>
				</select>
			</div>
		</form>
	</div>
</div>

